{
  "name": "@jimmyboh/stuff",
  "version": "0.0.2",
  "description": "Like a turkey.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./dist/** ./coverage",
    "build": "tsc",
    "watch": "concurrently npm:watch:*",
    "watch:build": "tsc --watch",
    "watch:test": "ava --watch",
    "test": "tsc && nyc --cache --color -a ava -v",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "preversion": "npm test",
    "version": "git add -A",
    "postversion": "git push && git push --tags && npm publish --access=public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JimmyBoh/stuff.git"
  },
  "author": "Jim Buck <jim@jimmyboh.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JimmyBoh/stuff/issues"
  },
  "homepage": "https://github.com/JimmyBoh/stuff#readme",
  "devDependencies": {
    "@types/chance": "^1.0.1",
    "@types/node": "^10.11.4",
    "@types/reflect-metadata": "0.1.0",
    "ava": "^0.25.0",
    "concurrently": "^4.0.1",
    "coveralls": "^3.0.2",
    "nyc": "^13.0.1",
    "rimraf": "^2.6.2",
    "typescript": "^3.1.1"
  },
  "dependencies": {
    "chance": "^1.0.16",
    "meow": "^5.0.0",
    "randexp": "^0.5.3",
    "reflect-metadata": "^0.1.12",
    "require-from-string": "^2.0.2"
  },
  "ava": {
    "files": [
      "./dist/**/*.spec.js"
    ],
    "source": [
      "./dist/**/*.js"
    ]
  },
  "nyc": {
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/**/*.spec.js",
      "dist/debug-*.js",
      "dist/index.js",
      "dist/bin/stuff.js"
    ]
  }
}
